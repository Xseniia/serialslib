<!DOCTYPE html>
<html>
  <head>
    <title>myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style media="screen">
      nav {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
      }
      .nav-links {
        height: 50px;
        display: flex;
        flex-direction: row;
      }
      .nav-link {
        font-size: 25px;
        width: 160px;
      }
    </style>
  </head>

  <body>
    <%= render 'layouts/nav' %>
    <%= render 'layouts/alert' %>

    <%= yield %>
  </body>
</html>
