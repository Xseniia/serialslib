<h1>Serials</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year of premiere</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @serials.each do |serial| %>
      <tr>
        <td><%= serial.title %></td>
        <td><%= serial.year_of_premiere %></td>
        <td><%= truncate(serial.description, :length => 70) %></td>
        <td><%= link_to 'Show', serial %></td>
        <% if current_user && current_user.admin %>
          <td><%= link_to 'Edit', edit_serial_path(serial) %></td>
          <td><%= link_to 'Destroy', serial, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Serial', new_serial_path %>
