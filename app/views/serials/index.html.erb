<br>

<div class="serials-head">
  <div class="">
    <h1>Serials</h1>
  </div>
  <br>
  <div class="serials-search">
    <%= render 'serial_search_form' %>
  </div>
</div>

<br>

<div class="serials-body">
  <div class="filters">
    <div class="filter tag-filter">
      <p>Tags</p>
      <% Tag.all.each do |tag| %>
        <%=raw tag_links(tag) %>
      <% end %>
      <%= link_to 'all', serials_path, class: 'badge badge-light' %>
    </div>

    <div class="filter genre-filter">
      <p>Genres</p>
      <ul class="list-group list-group-flush">
        <% Genre.all.each do |genre| %>
          <li class="list-group-item" >
            <%=raw genres_links(genre) %>
          </li>
        <% end %>
        <li class="list-group-item">
          <%= link_to 'All', serials_path, class: 'genre-filter-link' %>
        </li>
      </ul>
    </div>
  </div>

  <div class="serials-container">
    <% @serials.each do |serial| %>
      <%= render 'serial_card', serial: serial %>
    <% end %>
  </div>
</div>

<br>

<% if current_user&.admin? %>
  <%= link_to 'New Serial', new_serial_path, class: "btn btn-light" %>
<% end %>
