<%= form_with(model: serial, local: true) do |form| %>
  <% if serial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(serial.errors.count, "error") %> prohibited this serial from being saved:</h2>

      <ul>
      <% serial.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :year_of_premiere %>
    <%= form.number_field :year_of_premiere %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, size: '85x8'  %>
  </div>

  <div class="field">
    <%= form.label :country_id, "Country of origin" %><br />
    <%= form.collection_select(:country_id, Country.all, :id, :country_name) %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
