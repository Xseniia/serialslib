<%= form_with(model: serial, local: true, class: 'serial-form') do |form| %>
  <%= render "layouts/errors", resource: serial %>

  <div class="form-group col-md-6">
    <div class="field">
      <%= form.file_field :image %>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group col-md-6">
      <%= form.label :year_of_premiere %>
      <%= form.select :year_of_premiere, options_for_select(1933..2019), class: 'form-control' %>
    </div>
  </div>

  <div class="form-group col-md-6">
    <%= form.label :country_id, "Country of origin" %><br />
    <%= form.collection_select(:country_id, Country.all, :id, :country_name, prompt: 'Select')  %>
  </div>

  <div class="form-group">
    <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description, size: '85x8', class: "form-control"  %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-secondary" %>
  </div>

<% end %>
