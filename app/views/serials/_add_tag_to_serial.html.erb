<%= form_for @serial, class: 'form-row', url: { action: 'add_tag' } do |f| %>
  <%= f.fields_for :serial_tags do |fsg| %>
    <%= fsg.fields_for :tags do |fg| %>
      <%= fg.text_field 'tag', id: 'tag_select', prompt: 'Select', class: "form-group col-md-6" %>
    <% end %>
  <% end %>

  <%= f.submit 'Add tag', class: "btn btn-light" %>
<% end %>
